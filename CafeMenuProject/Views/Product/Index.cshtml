@model List<CafeMenuProject.Models.Product>

<h2>Kategori Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.CreatedDate.ToString()</td>
                <td>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary">Detay</a>
                    <a href="#" onclick="confirmDelete(@product.ProductId)" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Product" asp-action="Create" class="btn btn-success">Yeni Ürün Ekle</a>
<script>
    function confirmDelete(productid) {
        var result = confirm("Bu kategoriye ait bütün ürünler de silinecektir. Onaylıyor musunuz?");
        if (result) {
            window.location.href = '/Product/Delete/' + productid;
        }
    }
</script>
